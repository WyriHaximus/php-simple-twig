{
    "name": "wyrihaximus/simple-twig",
    "description": "\ud83c\udf31 Wrapper around Twig making rendering a string template trivial",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "twig/twig": "^3.14"
    },
    "require-dev": {
        "wyrihaximus/test-utilities": "^6.0.10"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\Twig\\": "src/"
        },
        "files": [
            "src/functions_include.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\Twig\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "platform": {
            "php": "8.2.13"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize",
            "composer update --lock --no-scripts"
        ],
        "post-update-cmd": [
            "composer normalize",
            "composer update --lock --no-scripts"
        ]
    }
}
